@model VideoKlub2019.Models.Film

@{
    ViewData["Title"] = "Create";
}

<h2>Unesite film:</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZanrId" class="control-label"></label>
                <select asp-for="ZanrId" class="form-control" asp-items="ViewBag.ZanrId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reziser" class="control-label"></label>
                <input asp-for="Reziser" class="form-control" />
                <span asp-validation-for="Reziser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Godina" class="control-label"></label>
                <input asp-for="Godina" class="form-control" />
                <span asp-validation-for="Godina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="File1"></label>
                <input id="File1" type="file" name="odabranaSlika" accept=".jpg, .gif, .png" onchange="PrikaziSliku()" />
            </div>
            <div class="form-group">
                <img id="img1" src="" width="200" height="150" />
            </div>
            
            <div class="form-group">
                <label asp-for="CenaPoDanu" class="control-label"></label>
                <input asp-for="CenaPoDanu" class="form-control" />
                <span asp-validation-for="CenaPoDanu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" onclick="return Validacija()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="Index">Vrati se na filmove</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function PrikaziSliku() {
        var File1 = document.getElementById("File1");
        var img1 = document.getElementById("img1");

        var fajl = File1.files[0];

        if (fajl != null && fajl.type.match(/image.*/)) {

            var reader = new FileReader();
            reader.readAsDataURL(fajl);

            reader.onload = function () {

                img1.src = reader.result;
            };

        }
        else {
            img1.src = "";
        }
    }

    function Validacija() {

        var src1 = $("#img1").attr("src");

        if (src1 == "") {
            $("#p1").html("Odaberi sliku");
            return false;
        }
        else {
            return true;
        }
    }
</script>
}
