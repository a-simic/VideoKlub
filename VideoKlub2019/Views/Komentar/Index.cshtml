@model IEnumerable<VideoKlub2019.Models.Komentar>
@inject UserManager<ApplicationUser> um
@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() > 0)
{


    <hr />
    <div style="border: 1px solid green;border-radius:5px; background-color: lightgreen;">
        @foreach (Komentar k in Model)
        {

            <div class="col-md-12">
                <h4 style="font-family:'Times New Roman';font-weight:bold;font-size:40px!important">@k.Korisnik</h4>

            </div>

            <div class="col-md-12">
                <h5 style="color:black;">@k.Poruka</h5>
            </div>

            @if (um.GetUserName(User) == k.Korisnik || um.GetUserName(User) == "admin")
            {


            <div class="col-md-8 mt-4 mb-3 ml-2">
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@k.KomentarId">Izmeni</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@k.KomentarId">Detalji</a> 
                <a class="btn btn-warning" asp-action="Delete" asp-route-id="@k.KomentarId">Obrisi</a>
            </div>
            }
            <hr style="width:100%; background-color: green;" />
        }
    </div>
}
else
{
    <h3>Nema komentara za ovaj film.</h3>
}