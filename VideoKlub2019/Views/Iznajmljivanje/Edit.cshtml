            </div>
            <div class="form-group">
                <label asp-for="DatumIznajmljivanja" class="control-label"></label>
                <input asp-for="DatumIznajmljivanja" class="form-control" />
                <span asp-validation-for="DatumIznajmljivanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumVracanja" class="control-label"></label>
                <input asp-for="DatumVracanja" class="form-control" />
                <span asp-validation-for="DatumVracanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
