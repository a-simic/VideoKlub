@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>Ulogujte se:</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.KorisnickoIme"></label>
                    <input asp-for="Input.KorisnickoIme" class="form-control" />
                    <span asp-validation-for="Input.KorisnickoIme" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Lozinka"></label>
                    <input asp-for="Input.Lozinka" class="form-control" />
                    <span asp-validation-for="Input.Lozinka" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.ZapamtiMe">
                            <input asp-for="Input.ZapamtiMe" />
                            @Html.DisplayNameFor(m => m.Input.ZapamtiMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Logovanje</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
